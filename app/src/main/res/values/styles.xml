<resources>

    <style name="DarkTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:titleTextStyle">@style/DarkTheme.ActionBarStyle</item>
        <item name="actionBarStyle">@style/DarkTheme</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="android:textColorPrimary">@color/colorArtistText</item>
        <item name="colorAccent">@color/colorArtistText</item>
        <item name="android:color">@color/colorAccent</item>
        <item name="android:windowBackground">@color/colorPrimaryDark</item>
    </style>

    <style name="TitleBarTextColor" parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">@color/colorAccent</item>
    </style>

    <style name="DarkTheme.ActionBarStyle" parent="@android:style/Widget.Holo.Light.ActionBar">
        <item name="android:titleTextStyle">@style/DarkTheme.ActionBar.TitleTextStyle</item>
    </style>

    <style name="DarkTheme.ActionBar.TitleTextStyle" parent="@android:style/TextAppearance.Holo.Widget.ActionBar.Title">
        <item name="android:textColor">@color/colorAccent</item>
    </style>

</resources>
