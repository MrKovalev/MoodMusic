<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cv_favorite_albums"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/spacing_4">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/num_album"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:padding="@dimen/spacing_8"
            android:textAppearance="@style/Header"
            tools:text="1." />

        <TextView
            android:id="@+id/name_album"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/spacing_4"
            android:layout_toStartOf="@+id/album_menu"
            android:layout_toEndOf="@+id/num_album"
            android:textAppearance="@style/Header"
            tools:text="Название альбома" />

        <TextView
            android:id="@+id/count_tracks"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/name_album"
            android:layout_marginStart="@dimen/spacing_4"
            android:layout_toStartOf="@+id/album_menu"
            android:layout_toEndOf="@+id/num_album"
            android:paddingBottom="@dimen/spacing_8"
            android:textAppearance="@style/SubHeader"
            tools:text="Количество песен: 1" />

        <ImageView
            android:id="@+id/album_menu"
            android:layout_width="@dimen/settings_icon_size"
            android:layout_height="@dimen/settings_icon_size"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_more_vert" />

    </RelativeLayout>

</androidx.cardview.widget.CardView>