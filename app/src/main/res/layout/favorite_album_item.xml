<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    android:id="@+id/cv_favorite_albums"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="7dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="6"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/num_album"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textColor="@color/colorArtistText"
            android:paddingLeft="5dp"
            android:textSize="28sp"
            android:text="1."/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="20dp"
            android:layout_weight="6"
            android:orientation="vertical">

            <TextView
                android:id="@+id/name_album"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textColor="@color/colorArtistText"
                android:textSize="28sp"
                android:text="Название альбома"/>

            <TextView
                android:id="@+id/count_tracks"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/colorArtistText"
                android:paddingBottom="5dp"
                android:text="Количество песен: 1"/>
        </LinearLayout>

        <ImageButton
            android:id="@+id/album_menu"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:background="@drawable/ic_more_vert"
            android:layout_weight="1"/>
    </LinearLayout>

</android.support.v7.widget.CardView>