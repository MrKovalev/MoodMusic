<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    android:id="@+id/cv_tracks"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_margin="7dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="6"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/img_track"
            android:layout_width="90dp"
            android:layout_height="100dp"
            android:layout_gravity="center"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="6"
            android:orientation="vertical">

            <TextView
                android:id="@+id/name_track"
                android:text="Decadance"
                android:textStyle="bold"
                android:textSize="28sp"
                android:paddingStart="10dp"
                android:paddingLeft="10dp"
                android:textColor="@color/colorArtistText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/name_artist"
                android:text="Disturbed"
                android:textSize="22sp"
                android:textColor="@color/colorArtistText"
                android:paddingStart="10dp"
                android:paddingLeft="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <ImageButton
            android:id="@+id/btn_add_track"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:layout_width="60dp"
            android:layout_height="60dp" />
    </LinearLayout>

</androidx.cardview.widget.CardView>